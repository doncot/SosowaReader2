<Page
    x:Class="SosowaReader.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SosowaReader.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="using:Prism.Windows.Mvvm"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:interactions="using:Microsoft.Xaml.Interactions.Core"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <interactivity:Interaction.Behaviors>
        <interactions:EventTriggerBehavior EventName="Loaded">
            <interactions:InvokeCommandAction Command="{Binding LoadedCommand}"/>
        </interactions:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>
    <!--参考：https://blogs.msdn.microsoft.com/quick_thoughts/2015/06/01/windows-10-splitview-build-your-first-hamburger-menu/-->
    <SplitView Name="HamburgerMenu" DisplayMode="CompactOverlay" IsPaneOpen="False"
               CompactPaneLength="50" OpenPaneLength="150">
        <SplitView.Pane>
            <StackPanel Background="DarkGray">
                <Button Name="HamburgerButton" Click="HamburgerButton_Click" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="50" Height="50" Foreground="White" Background="Transparent" />
                <Button Content="AAA" Width="50" Height="50"
                        Foreground="White" Background="Transparent" />
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <ProgressRing Grid.RowSpan="2" Height="64" Width="64"
                    IsActive="{Binding IsLoading}"
                    VerticalAlignment="Center" HorizontalAlignment="Center" />
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Button Content="←" Command="{Binding GoToPreviousCollectionCommand}"
                            Margin="8 4" Height="32" Width="32" />
                        <Button Content="&#8635;" Command="{Binding RefreshCommand}"
                            Margin="8 4" Height="32" />
                        <Button Content="→"
                            Margin="8 4" Height="32" />
                </StackPanel>
                <ListView Name="EntriesList" Grid.Row="1" ItemsSource="{Binding Entries}" SelectionMode="Single" SelectedItem="{Binding SelectedEntry, Mode=TwoWay}">
                        <interactivity:Interaction.Behaviors>
                            <interactions:EventTriggerBehavior EventName="SelectionChanged">
                                <interactions:InvokeCommandAction Command="{Binding SelectionChangedCommand}"/>
                            </interactions:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Title}" Padding="8 0" />
                                    <TextBlock Text="{Binding Author}" Padding="8 0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>
